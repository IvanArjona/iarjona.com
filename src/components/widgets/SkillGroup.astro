---
import SkillsGroupItem from './SkillsGroupItem.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  group: CollectionEntry<'skills'>;
}

const { group } = Astro.props;
---

<div class="p-4 text-center">
  <h3 class="text-2xl">
    {group.data.name}
  </h3>
  <div class="my-4 flex flex-col justify-center gap-4">
    {group.data.skills.map((skill) => <SkillsGroupItem skill={skill} hide={false} />)}
  </div>
</div>
